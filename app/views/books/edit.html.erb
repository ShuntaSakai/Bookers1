<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="error-message-head">
  <%= @book.errors.count %> errors prohibited this book from being saved:
</div>
<div class="error-message-body">
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
  <div class="form-group">
    <label class="<%= @book.errors[:title].any? ? "label-error" : "minititle" %>">Title</label>
    <%= f.text_field :title, class: @book.errors[:title].any? ? "input-error" : "" %>
  </div>

  <div class="form-group">
    <label class="<%= @book.errors[:body].any? ? "label-error" : "minititle" %>">Body</label>
    <%= f.text_area :body, class: @book.errors[:body].any? ? "input-error" : "" %>
  </div>
  <div class="button">
    <%= f.submit 'Update Book' %>
  </div>
  <div class="padding">
  <span class="link"><%= link_to "Show", book_path(@book.id) %></span> | <span class="link"><%= link_to "Back", default_path %></span>
  </div>
<% end %>

